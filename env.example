# Divorce Document Extraction Configuration
# Default settings for extract_divorce_docs.py

# OCR Configuration
OCR_LANGUAGE=en
OCR_CONFIDENCE_THRESHOLD=60

# Processing Configuration
DEFAULT_WORKERS=1
DEFAULT_LOG_LEVEL=INFO

# File Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_EXTENSIONS=.pdf,.xlsx,.xls,.csv

# Output Configuration
CREATE_BACKUP=true
COMPRESS_OUTPUT=false

# Table Extraction
TABLE_DETECTION_CONFIDENCE=80
MIN_TABLE_ROWS=2
MIN_TABLE_COLUMNS=2

# Text Cleaning
REMOVE_HEADERS=true
REMOVE_FOOTERS=true
PRESERVE_PARAGRAPHS=true
COLLAPSE_WHITESPACE=true

# Security
SANITIZE_FILENAMES=true
MAX_FILENAME_LENGTH=200 